<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_all_white_5"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="单选框"
            android:textColor="@color/moren_tv"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            />
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/moren_line"
            android:visibility="visible"
            />

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                tools:text="内容内容内容内容内容内容内容内容"
                android:textColor="@color/moren_tv"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColorHint="@color/color_999999"
                tools:hint="请输入内容"
                android:textSize="14sp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="@color/moren_tv"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/shape_edit_cursor_moren"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="7dp"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                tools:text="忽略"
                android:textColor="@color/color_999999"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"
                />

            <TextView
                android:id="@+id/tv_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                tools:text="取消"
                android:textSize="14sp"
                android:textColor="@color/moren_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="77dp"
                />

            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                tools:text="确认"
                android:textSize="14sp"
                android:textColor="@color/moren_theme_color_light"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>